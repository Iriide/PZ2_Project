@model TaggerModel

@{
    ViewBag.Title = "Tagger";
}

@if (Context.Session.GetString("Username") is null || Context.Session.GetString("Admin") != "true")
{
    <h3>You must be logged in and be an admin to view this page</h3>
}
else
{
    <h2>Tagger</h2>

    @using (Html.BeginForm("TaggerAdd", "Login", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Boardgame, "Boardgame name")
                    @Html.DropDownListFor(m => m.Boardgame, Model.BoardgameList, "-- Select --", new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Tag, "Second Dropdown")
                    @Html.DropDownListFor(m => m.Tag, Model.TagList, "-- Select --", new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    }
}


@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <p>@ViewBag.Error</p>
}